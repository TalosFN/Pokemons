<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#237ea6">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/btn_back"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#237ea6">

            <ImageView
                android:id="@+id/img_pokemon"
                android:layout_width="0dp"
                android:layout_height="550dp"
                android:background="@drawable/border"
                android:src="@drawable/bulbasaur"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#237ea6"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/img_pokemon">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:paddingBottom="15dp"
                    android:text="Bulbazaur"
                    android:textColor="#c8ff47"
                    android:textSize="40sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                     />


                <androidx.constraintlayout.helper.widget.Flow
                    android:id="@+id/info_block_top"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="tv_weight,tv_height"
                    app:flow_horizontalGap="10dp"
                    app:flow_horizontalStyle="spread_inside"
                    app:flow_wrapMode="aligned"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_name" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:text="Type"
                    android:textSize="25sp"
                    app:layout_constraintTop_toBottomOf="@id/info_block_top" />

                <TextView
                    android:id="@+id/tv_height"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="76dp"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:text="Height"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:text="Weight"
                    android:textSize="25sp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="#b8130d"
        android:gravity="center"
        android:text="Back"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>